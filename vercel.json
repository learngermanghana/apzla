{
  "version": 2,
  "builds": [
    {
      "src": "web/package.json",
      "use": "@vercel/static-build",
      "config": { "distDir": "dist" }
    }
  ],
  "functions": {
    "api/**/*.js": {
      "runtime": "nodejs18.x"
    }
  },
  "routes": [
    {
      "src": "/api/transaction/verify/(?<reference>[^/]+)",
      "dest": "/api/transaction/verify.js?reference=$reference"
    },
    { "src": "/api/(.*)", "dest": "/functions/api/$1.js" },
    { "handle": "filesystem" },
    {
      "src": "/(checkin|attendance|self-checkin|give|join|status)(.*)",
      "dest": "/index.html"
    },
    { "src": "/(.*)", "dest": "/index.html" }
  ]
}
