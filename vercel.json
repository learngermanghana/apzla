{
  "version": 2,
  "builds": [
    { "src": "functions/api/**/*.js", "use": "@vercel/node" },
    {
      "src": "web/package.json",
      "use": "@vercel/static-build",
      "config": { "distDir": "dist" }
    }
  ],
  "routes": [
    {
      "src": "/api/transaction/verify/(?<reference>[^/]+)",
      "dest": "/functions/api/transaction/verify.js?reference=$reference"
    },
    { "src": "/api/(.*)", "dest": "/functions/api/$1.js" },

    { "handle": "filesystem" },

    {
      "src": "/(checkin|attendance|self-checkin|give|join|status)(.*)",
      "dest": "/index.html"
    },
    { "src": "/(.*)", "dest": "/index.html" }
  ]
}
