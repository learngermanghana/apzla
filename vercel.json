{
  "version": 2,
  "functions": {
    "functions/**/*.js": {
      "runtime": "nodejs20.x"
    }
  },
  "builds": [
    { "src": "functions/**/*.js", "use": "@vercel/node" },
    { "src": "web/package.json", "use": "@vercel/static-build", "config": { "distDir": "dist" } }
  ],
  "routes": [
    { "src": "/api/(.*)", "dest": "/functions/api/$1.js" },
    { "src": "/(.*)", "dest": "/web/$1" }
  ]
}
