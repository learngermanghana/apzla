{
  "version": 2,
  "buildCommand": "npm install --prefix web && npm run build --prefix web",
  "outputDirectory": "web/dist",
  "builds": [
    {
      "src": "functions/api/**/*.js",
      "use": "@vercel/node"
    },
    {
      "src": "web/package.json",
      "use": "@vercel/static-build",
      "config": { "distDir": "dist" }
    }
  ],
  "routes": [
    {
      "src": "/api/transaction/verify/(?<reference>[^/]+)",
      "dest": "/functions/api/transaction/verify/[reference].js?reference=$reference"
    },
    {
      "src": "/api/(.*)",
      "dest": "/functions/api/$1.js"
    },
    { "handle": "filesystem" },
    {
      "src": "/(.*)",
      "dest": "/index.html"
    }
  ]
}
