{
  "version": 2,
  "builds": [
    {
      "src": "functions/api/**/*.js",
      "use": "@vercel/node"
    },
    {
      "src": "web/package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "dist"
      }
    }
  ],
  "routes": [
    {
      "src": "/api/transaction/verify/(?<reference>[^/]+)",
      "dest": "/functions/api/transaction/verify/[reference].js?reference=$reference"
    },
    {
      "src": "/api/(.*)",
      "dest": "/functions/api/$1.js"
    },
    {
      "src": "/checkin(.*)",
      "dest": "/web/dist/index.html"
    },
    {
      "src": "/give(.*)",
      "dest": "/web/dist/index.html"
    },
    {
      "src": "/(.*)",
      "dest": "/web/dist/$1"
    }
  ]
}
